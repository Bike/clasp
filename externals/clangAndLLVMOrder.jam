
LLVM_LIB_DIR = [ SHELL "llvm-config --libdir | tr -d '\n'" ] ;
LLVM_LIBS = [ GLOB $(LLVM_LIB_DIR) : libLLVM*.a ] ;

#LLVM_LIBS_STRING = [ SHELL "llvm-config --libfiles | tr -d '\n'" ] ;
#LLVM_LIBS = [ SPLIT_BY_CHARACTERS $(LLVM_LIBS_STRING) : " " ] ;

CLANG_LIBS = [ GLOB $(LLVM_LIB_DIR) : libclang*.a ] ;

echo " LLVM libraries are in directory: |" $(LLVM_LIB_DIR) "|" ;
echo " LLVM libraries are --> " $(LLVM_LIBS) ;

alias llvm_lib_globbed : $(LLVM_LIBS) ;
alias clang_lib_globbed : $(CLANG_LIBS) ;

